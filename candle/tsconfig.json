{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ]
}